# Uncomment this line to define a global platform for your project
platform :ios, '15.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'

      # Fix for iOS 16+ compatibility
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'

      # Bitcode is deprecated in Xcode 14+
      config.build_settings['ENABLE_BITCODE'] = 'NO'

      # Fix for some plugin compatibility issues
      config.build_settings['ONLY_ACTIVE_ARCH'] = 'NO'

      # permission_handler v12 requires explicit macros for each permission used.
      # Without this the plugin crashes at runtime on iOS.
      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= [
        '$(inherited)',
        'PERMISSION_CAMERA=1',
        'PERMISSION_MICROPHONE=1',
        'PERMISSION_BLUETOOTH=1',
        'PERMISSION_NOTIFICATIONS=1',
      ]

      # Patch GeneratedPluginRegistrant.m to disable crashing plugins on iOS
      # This runs after pod install so Flutter regeneration is already done
    end
  end

  # Patch GeneratedPluginRegistrant.m to comment out problematic plugins
  registrant_path = File.join(File.dirname(__FILE__), 'Runner', 'GeneratedPluginRegistrant.m')
  if File.exist?(registrant_path)
    content = File.read(registrant_path)
    [
      'SwiftAlarmPlugin',
      'FlutterWebRTCPlugin',
      'LiveKitPlugin',
      'PermissionHandlerPlugin',
    ].each do |plugin|
      content = content.gsub(/^(\s*\[#{plugin}\s+registerWithRegistrar.+\];)/, '  // DISABLED: \1')
    end
    File.write(registrant_path, content)
    puts "âœ… Patched GeneratedPluginRegistrant.m - disabled: SwiftAlarmPlugin, FlutterWebRTCPlugin, LiveKitPlugin, PermissionHandlerPlugin"
  end
end
